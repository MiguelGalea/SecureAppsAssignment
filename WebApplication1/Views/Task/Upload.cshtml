@model IEnumerable<ShoppingCart.Application.ViewModels.SubmissionViewModel>

@{ ViewData["Title"] = "Submission"; }

<h1>Submit</h1>

<hr />
@foreach (var t in Model)
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@t.FileName" class="control-label">Title</label>
                <input asp-for="@t.FileName" class="form-control" />
                <span asp-validation-for="@t.FileName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@t.Description" class="control-label"></label>
                <input asp-for="@t.Description" class="form-control" />
                <span asp-validation-for="@t.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@t.Path" class="control-label"></label>
                <input type="file" name="file" class="form-control" />
                <span name="file" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@t.TaskId" class="control-label"></label>
                <input type="hidden" name="taskId" value ="@t.TaskId" />
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
